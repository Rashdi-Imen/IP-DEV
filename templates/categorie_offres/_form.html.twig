


{% extends 'base2.html.twig' %}
{% block title %}New offers
{% endblock %}
{% block content %}
<style>
.help-block {
  color: red;
  padding-left: 25px;
  position: relative;
}
</style>
	<h1>Create new Categories_offre</h1>
	
	<div class="page-wrapper">
		<div class="content">
			<div class="row">
				<div class="col-sm-12">
					<div class="card">
						<div class="card-body">
						{{ form_start(form,{'attr': 
       								 {'novalidate': 'novalidate'}} 
       								 ) }}
								<div class="row">
                                
									<div class="col-12">
										<div class="form-heading">
											<h4>Categories_offre Details</h4>
										</div>
									</div>

   								<div class="col-12 col-md-6 col-xl-4">
                                <div class="form-group local-forms">
                                    <label>Nom
                                        <span class="login-danger">*</span>
                                    </label>
                                    {{ form_widget(form.nom, {attr:{'class':'form-control'}}) }}
                                <div class="help-block">   {{ form_errors(form.nom) }}  </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-4">
                                <div class="form-group local-forms">
                                    <label>description
                                        <span class="login-danger">*</span>
                                    </label>
                                    {{ form_widget(form.description, {attr:{'class':'form-control'}}) }}
                                    	 <div class="help-block"> {{ form_errors(form.description) }}  </div>
                                </div>
                            </div>

									
								<div class="col-12">
                               			 <div class="doctor-submit text-end">
                                   			 <div class="text-right">
                                       				 <button class="btn btn-primary btn-add" style="width:120px">{{ button_label|default('Save') }}</button>
                                    		</div>
                              			  </div>
                          		  </div>
								    &nbsp;  
								<div class="col-12">
									<div class="doctor-submit text-end">
										<div class="text-right">
											<a  a class="btn btn-primary btn-add" style="width:120px" href="{{ path('app_categorie_offres_index') }}">back to list</a>
										</div>
									</div>
								</div>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
